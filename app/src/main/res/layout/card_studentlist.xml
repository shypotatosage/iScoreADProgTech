<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/studentofclass_CardView"
                android:layout_width="330dp"
                android:layout_height="160dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FFBC84"
                app:cardCornerRadius="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/namastudentlist_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Micheila Jiemesha"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:translationZ="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/alamatstudentlist_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Jl. Citraland Surabaya Blok A"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="@+id/namastudentlist_textView"
                        app:layout_constraintTop_toBottomOf="@+id/namastudentlist_textView" />

                    <TextView
                        android:id="@+id/notelpstudentlist_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0888888888888"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="@+id/alamatstudentlist_textView"
                        app:layout_constraintTop_toBottomOf="@+id/alamatstudentlist_textView" />

                    <Button
                        android:id="@+id/viewstudentlist_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#06113C"
                        android:text="View"
                        app:cornerRadius="12sp"
                        app:layout_constraintStart_toStartOf="@+id/notelpstudentlist_textView"
                        app:layout_constraintTop_toBottomOf="@+id/notelpstudentlist_textView" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>